<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/recommend_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.youth.banner.Banner
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/zhihu_daily_hot"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:delay_time="4000"
                app:title_textsize="15sp" />

            <include layout="@layout/recommend_title_zhihu"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recommand_zhihu_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"/>

            <include layout="@layout/recommend_title_welfare"/>

            <android.support.v7.widget.CardView
                android:id="@+id/recommand_welfare"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                app:cardCornerRadius="4dp"
                />

            <include layout="@layout/recommend_title_joke"/>
        </LinearLayout>

    </ScrollView>

</FrameLayout>